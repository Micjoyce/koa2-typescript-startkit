{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018"
    ],
    "inlineSourceMap": true,
    "importHelpers": true,
    "newLine": "LF",
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noImplicitReturns": false,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "coverage",
    "debug",
    "node_modules"
  ]
}